{
  "template": {
    "mappings": {
      "properties": {
        "data_stream.type": {
          "type": "constant_keyword",
          "value": "metrics"
        },
        "data_stream.dataset": {
          "type": "constant_keyword"
        },
        "data_stream.namespace": {
          "type": "constant_keyword"
        },
        "@timestamp": {
          "type": "date_nanos"
        },
        "attributes": {
          "type": "passthrough",
          "time_series_dimension": true,
          "dynamic": true
        },
        "resource": {
          "properties": {
            "attributes": {
              "type": "passthrough",
              "time_series_dimension": true,
              "dynamic": true
            }
          }
        },
        "scope": {
          "properties": {
            "attributes": {
              "type": "passthrough",
              "time_series_dimension": true,
              "dynamic": true
            }
          }
        },
        "start_time": {
          "type": "date_nanos"
        },
        "metrics": {
          "type": "passthrough",
          "dynamic": true
        }
      },
      "dynamic_templates": [
        {
          "dimensions": {
            "path_match": ["resource.attributes.*", "scope.attributes.*", "attributes.*"],
            "mapping": {
              "type": "keyword"
            }
          }
        },
        {
          "histograms": {
            "mapping": {
              "type": "histogram",
              "ignore_malformed": true
            }
          }
        },
        {
          "counter": {
            "mapping": {
              "type": "{dynamic_type}",
              "time_series_metric": "counter",
              "ignore_malformed": true
            }
          }
        },
        {
          "gauge": {
            "mapping": {
              "type": "{dynamic_type}",
              "time_series_metric": "gauge",
              "ignore_malformed": true
            }
          }
        }
      ]
    }
  },
  "_meta": {
    "description": "OpenTelemetry mappings for the metrics index template installed by x-pack",
    "managed": true
  },
  "version": ${xpack.stack.template.version},
  "deprecated": ${xpack.stack.template.deprecated}
}
