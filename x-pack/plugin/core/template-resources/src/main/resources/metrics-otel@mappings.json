{
  "template": {
    "mappings": {
      "properties": {
        "data_stream.type": {
          "type": "constant_keyword",
          "value": "metrics"
        },
        "data_stream.dataset": {
          "type": "constant_keyword"
        },
        "data_stream.namespace": {
          "type": "constant_keyword"
        },
        "@timestamp": {
          "type": "date_nanos"
        },
        "start_time": {
          "type": "date_nanos"
        },
        "metrics": {
          "type": "passthrough",
          "dynamic": true,
          "priority": 1
        },
        "attributes": {
          "type": "passthrough",
          "time_series_dimension": true,
          "dynamic": true,
          "priority": 2
        },
        "unit": {
          "type": "keyword",
          "time_series_dimension": true,
          "ignore_above": 1024
        },
        "scope": {
          "properties": {
            "attributes": {
              "type": "passthrough",
              "time_series_dimension": true,
              "dynamic": true,
              "priority": 3
            }
          }
        },
        "resource": {
          "properties": {
            "attributes": {
              "type": "passthrough",
              "time_series_dimension": true,
              "dynamic": true,
              "priority": 4
            }
          }
        }
      },
      "dynamic_templates": [
        {
          "histogram": {
            "mapping": {
              "type": "histogram",
              "ignore_malformed": true
            }
          }
        },
        {
          "counter_long": {
            "mapping": {
              "type": "long",
              "time_series_metric": "counter",
              "ignore_malformed": true
            }
          }
        },
        {
          "gauge_long": {
            "mapping": {
              "type": "long",
              "time_series_metric": "gauge",
              "ignore_malformed": true
            }
          }
        },
        {
          "counter_double": {
            "mapping": {
              "type": "double",
              "time_series_metric": "counter",
              "ignore_malformed": true
            }
          }
        },
        {
          "gauge_double": {
            "mapping": {
              "type": "double",
              "time_series_metric": "gauge",
              "ignore_malformed": true
            }
          }
        },
        {
          "summary_gauge": {
            "mapping": {
              "type": "aggregate_metric_double",
              "time_series_metric": "gauge",
              "ignore_malformed": true
            }
          }
        },
        {
          "summary_counter": {
            "mapping": {
              "type": "aggregate_metric_double",
              "time_series_metric": "counter",
              "ignore_malformed": true
            }
          }
        }
      ]
    }
  },
  "_meta": {
    "description": "OpenTelemetry mappings for the metrics index template installed by x-pack",
    "managed": true
  },
  "version": ${xpack.stack.template.version},
  "deprecated": ${xpack.stack.template.deprecated}
}
